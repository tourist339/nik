<?php

$props= $this->view_data["data"];
$redirect_city=$this->view_data["redirect_city"]
?>

<?php foreach ($props as $prop): ?>
<div class="admin-props-list">
<form class="admin-props-item" action="/<?php echo ADMIN_URL ?>/listSingleProp">
    <?php if($prop["lyfly"]==1):?>
        <h1><?php echo $prop["title"] ?> (Lyfly)</h1>
    <?php else: ?>
        <h1><?php echo $prop["title"] ?></h1>

    <?php endif; ?>
    <h3><?php echo $prop["address"]." , ".$prop["city"]." , ".$prop["state"] ?></h3>
    <h3>Property ID: <span id="propid"><?php echo $prop["id"] ?>&nbsp; &nbsp; &nbsp;Owner ID:<?php echo $prop["ownerid"] ?></h3>

    <input type="hidden" value="<?php echo $prop["lyfly"] ?>" name="prop_lyfly">

    <input type="hidden" value="<?php echo $prop["id"] ?>" name="prop_id">
    <input type="hidden" value="<?php echo $redirect_city ?>" name="redirect_city">

